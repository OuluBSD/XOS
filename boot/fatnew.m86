msgBDFSPC: .ASCIZ  "Bad file specification"
msgDIRNFND:.ASCIZ  "Directory not found"
msgFILNFND:.ASCIZ  "File not found"
msgunknown:.ASCIZ  "Unknown error reported"

	.MOD	2
