.PAGE
	.SBTTL	ks_chkchg - Subroutine to check for possible disk change

;Function to check for possible disk change (ks_chkchg dispatch).  If the
;  drive has a media sensor, it is used.  If it does not have a media sensor
;  and the motor is not running, a possible change is reported, if the motor
;  is running, not changed is reported.
;	long usbdskachkchg(void);
;  Value returned is:
;	<0 - Error, value is XOS error code
;	 0 - Disk not changed
;	 1 - Disk might be changed (no media sensor)

fdkchkchg:
	PUSHL	EDI
	PUSHL	ESI
	MOVL	EDI, knlTda+tdaDcb##
	MOVL	ESI, dcb_dkucb[EDI]

	TESTB	ucb_sts1[ESI], #U1$MOTON ;Is the motor on?
	JNE	2$			;Yes - say not changed
	TESTB	ucb_bits[ESI], #UB$MEDIAC ;No - does drive have a media
					  ;  sensor?
	JE	10$			;No
	MOVL	EDX, ucb_kcb[ESI]	;Yes
	TESTB	kcb_sts2[EDX], #K2$MSENSOR ;Are we using it now?
	JE	10$			;No
	PUSHL	#kf_chkchg		;Yes - must get the controller to check
	PUSHL	#0			;  the sensor state
	PUSHL	#0
	CALL	xosdskTransfer##
	TESTL	EAX, EAX
	JS	chgdone			;If error
2$:	CLRL	EAX			;OK - return 0 to say not changed
chgdone:POPL	ESI
	POPL	EDI
	RET

;Here to report that disk may have been changed if motor is off and do not
;  have a media sensor

10$:	MOVL	EAX, #1
	JMP	chgdone
.PAGE
	.SBTTL	kf_init - Initialize controller

;Here for the initialize controller function at fork level
;	c{ESI} = Offset of UCB
;	c{EDI} = Offset of DCB
;	CALL	fdkinit

fdkinit:ENTER	fdk_SIZE, 0
	MOVL	EBX, ucb_kcb[ESI]
	ORB	kcb_sts1[EBX], #K1$INT	;Indicate expecting interrupt now
	MOVB	dcb_dmachnl[EDI], #2	;Store DMA channel number
	MOVL	EDX, ucb_ioreg1[ESI]	;Point to the digital output register
	A2IOP	P_DCFDDOR
	MOVB	AL, #0			;Reset the floppy controller
	OUTB	[DX]
	IOPAUSE
	MOVL	EBX, ucb_kcb[ESI]	;Get the DMA channel (must get it here
	CALL	getcont			;  even though we don't use it since
	JC	8$.S			;  the controller enables DMA and
	MOVL	EDX, kcb_ioreg1[EBX]	;  interrupts together)
	A2IOP	P_DCFDDOR		;Make sure interrupts are enabled
	MOVB	AL, #0Ch		;  (getcont will not enable interrupts
	OUTB	[DX]			;  if running on a PS/2)
	IOPAUSE
	INB	P_INC1P1
	IOPAUSE
	ANDB	AL, #~40h
	OUTB	P_INC1P1
	IOPAUSE
	MOVL	EAX, #-1
	MOVL	EDX, EAX
	CALL	knlXfWait##
	JC	8$.S
	MOVL	ESI, dcb_dkucb[EDI]	;Get UCB offset
	CALL	floprslt
	JC	8$.S
	DECL	EBX			;Did we get at least one result byte?
	JS	8$.S			;No
	CMPB	ucb_fdrslt[ESI], #0C0	;Yes - is ST0 correct?
	JNE	8$.S			;No
	CLRL	EAX
	JMP	10$.S			;If normal

;Here if error

8$:	INCL	ucb_tdeverr[ESI]	;Count the error
	INCL	ucb_hdeverr[ESI]
	MOVL	EAX, #ER_DEVER
10$:	CLRL	ECX
	JMP	fdkdone
.PAGE
	.SBTTL	kf_readid - Read ID field

;Here for the read ID field function at fork level
;	c{EDI} = Offset of DCB
;	CALL	fdkreadid

fdkreadid:
	ENTER	fdk_SIZE, 0
	MOVB	fdk_mode[EBP], #0
	MOVL	EBX, ucb_kcb[ESI]
	CALL	getcont
	JC	1$
	MOVL	fdk_daddr[EBP], #1
	CALL	doseek			;Seek to right track
1$:	JC	fdkdone
	MOVB	fdk_retry1[EBP], #3	;Initialize retry count
2$:	MOVL	EBX, ucb_kcb[ESI]
	ORB	kcb_sts1[EBX], #K1$INT|K1$RESULT ;Indicate result phase next
	MOVB	AH, #0Ah		;Get read ID function
	ORB	AH, ucb_fdmode[ESI]
	CALL	flopcmdi
	JC	6$
	MOVB	AH, ucb_select[ESI]	;Head and unit select
	CALL	flopcmda
	JC	6$
	MOVL	EBX, ucb_kcb[ESI]
	MOVB	kcb_itimer[EBX], #3t	;Start interrupt timer
	MOVL	EAX, #-1
	MOVL	EDX, EAX
	CALL	knlXfWait##
	JC	6$
	CALL	knlDmaDisable##		;Disable our DMA channel
	ANDB	kcb_sts1[EBX], #~K1$DMAINUSE
	CALL	floprslt2		;Get remaining result bytes
6$:	JC	fdkdone
	CMPB	BL, #6			;Did we get 6 bytes?
	JNE	xfdverr			;No - fail
	MOVB	BL, ucb_fdrslt+0[ESI]	;Check ST0 result value
	CMPB	BL, ucb_select[ESI]
	JNE	10$.S			;If error
	MOVB	CL, ucb_fdrslt+6[ESI]	;OK - get sector size code
	CMPB	CL, #6			;Is it legal?
	JBE	8$			;Yes
	MOVB	CL, #0			;No - assume 128 bytes!
8$:	MOVB	ucb_fdsecs[ESI], CL	;Store it sector size code
	MOVL	EAX, #128t		;Convert to number of bytes
	SHLL	EAX, CL
	MOVL	ucb_csecsz[ESI], EAX	;And store that too
	CALL	setnumsec		;Update number of sectors per track
	CLRL	EAX			;  to match
	JMP	fdkdone

;Here if error

10$:	MOVL	EBX, ucb_kcb[ESI]	;Is this the read-ahead DCB?
12$:	MOVW	AX, ucb_fdrslt+1[ESI]	;Get error status bits
	CALL	xlaterror		;Translate the error indication
	DECB	fdk_retry1[EBP]		;No - have we done this enough?
	JNS	2$			;No - go try again
	JMP	xferr			;Yes - go fail
