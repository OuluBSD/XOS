	.SBTTL	Initialization

	INITSUB	initfdka

	ONCE

initfdka::
	MOVL	EBX, #'FDKA'		;Get disk driver name
	MOVL	EDX, #fdkdsp		;Get offset of dispatch table
	CALL	xosdskNewDriver##	;Register this disk driver
	JC	6$			;If error
	MOVL	EBX, lkei_pctop-4[ESP]	;OK
	MOVL	[EBX], #codetop
	CLRL	EAX
6$:	RET	lkei_ADJ

	CODE
.PAGE
	.SBTTL	fdkaddunit - Subroutine to add disk unit

;Subroutine to add disk unit
;	c{EAX} = Unit number
;	c{EBX} = Address of KCB for controller (0 if none)
;	c{ECX} = Index on controller
;	c{EDX} = Address of characteristics list
;	c{ESI} = Base IO register
;	CALL	fdkaddunit
;	c{EAX} = Returned value

$$$=!0
FRM fau_char , 8	;Address of characteristics list
FRM fau_ioreg, 4	;Base IO register number
FRM fau_index, 4	;Index on controller
FRM fau_bits , 1	;Value for ubc_bits
FRM fau_type , 1
FRM fau_unit , 1	;Unit number
FRM fau_info , 1	;Information about drive
FRM fau_cdsp , 1	;Controller description
FRM fau_srt  , 1	;Step rate time value
FRM fau_xgpl , 1	;Transfer gap length
FRM          , 1
FRM fau_head , 4	;Heads per track (1 or 2)
FRM fau_ssize, 4	;Default sector size (bytes)
FRM fau_tsize, 4	;Default track size (sectors)
FRM fau_cyln , 4	;Default number of cylinders
FRM fau_kcb  , 4	;Offset of KCB
fau_SIZE=!$$$

;Define bits for fau_info

INFO$NEWOAS=!0x02	;New once-a-second routine set up
INFO$NEWKCB=!0x01	;New KCB created

	.MOD	4
fdkaublk:				;Characteristics description block
 CHARBGN  3, knlDCharValCom##		;  for addunit
 CHARENT  TYPE    , TEXT, , 8, 0, 0, knlRtnZero##, 0
 CHARENT  UNIT    , DECV, , 4, 0, 0, knlRtnZero##, 0
 CHARENT  CONDESP , TEXT, , 8, 0, 0, fdkaucdsp   , 0
 CHARENT  IOREG   , HEXV, , 4, 0, 0, knlRtnZero##, 0
 CHARENT  INDEX   , DECV, , 4, 0, 0, fdkauindex  , 0
 CHARENT  UNITTYPE, TEXT, , 8, 0, 0, fdkauutyp   , 0
 CHAREND

;Values for the CONDESP parameter

cdspval:.LONG	'PCAT', 0, FCT_PCAT
	.LONG	'CMPT', 0, FCT_CMPT
CDSPVALSZ=!{$-cdspval}/12t

;Values for the UNITTYPE parameter

utypval:.LONG	'HD3', 0, {DT_HD3<8}|DD_HIGH|UB$MEDIAC
	.LONG	'DD3', 0, {DT_DD3<8}|DD_DOUBLE|UB$MEDIAC
	.LONG	'HD5', 0, {DT_HD5<8}|DD_HIGH|UB$MEDIAC
	.LONG	'DD5', 0, {DT_DD5<8}|DD_DOUBLE|UB$48TPI
	.LONG	'DD8', 0, {DT_DD8<8}|DD_DOUBLE
UTYPVALSZ=!{$-utypval}/12t

;Values for the DDEN parameter

ddenval:.LONG	'S'   , 0   , DD_SINGLE
	.LONG	'SING', 'LE', DD_SINGLE
	.LONG	'D'   , 0   , DD_DOUBLE
	.LONG	'DOUB', 'LE', DD_DOUBLE
	.LONG	'H'   , 0   , DD_HIGH
	.LONG	'HIGH', 0   , DD_HIGH
	.LONG	0
DDENVALSZ=!{$-ddenval}/12t

;Generate table which gives default values as a function of drive type

	.MACRO	XX  srt, nmcyl, xgpl, fgpl, nsec, nhds, secsz
	.BYTE	srt, nmcyl't, xgpl'h, fgpl'h, nsec't, nhds
	.WORD	secsz't
	.ENDM

;	   SRT NmCyl XGpl FGpl #Sec#Hds SecSz
dvaltbl:XX  6,  80,  1B,  60,   9,  2,  512 ;DT_DD3 = 1 - 3.5" double density
	XX  6,  80,  1B,  6C,  18,  2,  512 ;DT_HD3 = 2 - 3.5" high density
	XX  6,  40,  2A,  50,  15,  2,  512 ;DT_DD5 = 3 - 5.25" double density
	XX  3,  80,  2A,  54,   9,  2,  512 ;DT_HD5 = 4 - 5.25" high density
	XX  8,  77,  0F,  1B,  26,  1,  128 ;DT_DD8 = 5 - 8" double density

	CODE

2$:	LEAVE
	RET

fdkaddunit:
	ENTER	fau_SIZE, 0		;Allocate our stack frame
	MOVB	fau_unit[EBP], AL	;Store unit number
	MOVL	fau_kcb[EBP], EBX	;Store possible KCB offset
	MOVL	fau_ioreg[EBP], ESI	;Store base IO register
	MOVL	fau_char+0[EBP], EDX	;Store address of characteristis list
	MOVL	fau_char+4[EBP], FS
	MOVB	fau_info[EBP], #0
	MOVL	fau_index[EBP], #-1
	MOVB	fau_cdsp[EBP], #FCT_PCAT
	MOVL	EAX, #{DT_HD5<8}|DD_HIGH|UB$MEDIAC
	CALL	fdkauutyp2		;Set up default drive type
	MOVL	EBX, #fdkaublk		;Point to our characteristics table
	IFFAULT	knlQAdrErr0Lv##
	MOVL	EDX, fau_char[EBP]	;Point to caller's characteristics list
	MOVB	AL, #0			;Fail on bad names
	CALL	knlAddUnitChar##	;Process characteristics
	JC	10$			;If error
	CMPL	fau_index[EBP], #-1
	JE	14$
	MOVB	AL, #'F'		;OK - see if this unit is defined now
	MOVB	AH, fau_unit[EBP]
	CALL	xosdskSrchUnit##
	JE	15$			;Defined - fail
	CALL	knlGetXRes##		;Get the exec memory resource
	MOVL	EBX, fau_kcb[EBP]	;Is there a KCB now?
	TESTL	EBX, EBX
	JNE	28$			;Yes - go on
	MOVB	CL, #{ID_FDISK-ID_HBASE}/8 ;No - see if our vector is available
	CALL	knlChkIRqAvl##
	JC	8$.S
