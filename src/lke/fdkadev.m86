	JE	16$			;No
	MOVL	EBX, fdk_buffer[EBP]	;Yes
	MOVL	EBX, bfr_paddr[EBX]
	CALL	knlDmaSetPhy##
	JMP	18$

16$:	MOVL	EBX, fdk_buffer[EBP]	;Get virtual address for transfer
	MOVW	FS, xffPda##
	CALL	knlDmaSetVir##		;Set up DMA controller
18$:	MOVL	EBX, ucb_kcb[ESI]
	JC	14$			;If error
	TESTB	fdk_mode[EBP], #FM$READ ;Read operation?
	JNE	20$			;Yes
	INCL	ucb_blockout[ESI]	;No
	ADDL	ucb_byteout[ESI], ECX
	CALL	knlDmaOutput##		;start write
	JMP	22$

20$:	INCL	ucb_blockin[ESI]
	ADDL	ucb_bytein[ESI], ECX
	CALL	knlDmaInput##		;Start input
22$:	ORB	kcb_sts1[EBX], #K1$DMAINUSE
	MOVL	EBX, ucb_kcb[ESI]	;Restore offset of our KCB
	ORB	kcb_sts1[EBX], #K1$INT|K1$RESULT ;Indicate result phase next
	MOVB	AH, fdk_func[EBP]	;Get read, write, or format function
	ORB	AH, ucb_fdmode[ESI]
	CALL	flopcmdi
24$:	JC	14$
	MOVB	AH, ucb_select[ESI]	;Head and unit select
	CALL	flopcmda
	JC	24$
	CMPB	fdk_func[EBP], #0Dh	;Is this a format operation?
	JE	dofmt			;Yes
	MOVB	AH, fdk_daddr+2[EBP]	;No - set cylinder number
	CALL	flopcmda
	JC	24$
	MOVB	AH, fdk_daddr+1[EBP]	;Set head number
	CALL	flopcmda
	JC	24$
	MOVB	AH, fdk_daddr+0[EBP]	;Set sector number
	CALL	flopcmda
	JC	24$
	MOVB	AH, ucb_fdsecs[ESI]	;Set sector size
	CALL	flopcmda
	JC	24$
	MOVB	AH, ucb_csects[ESI]	;Get end of track value (assume want
					;  multi-sector operation)
	BTL	knlTda+tdaCmd##, #XO%NORDAH ;Want single sector transfer?
	JNC	26$			;No
	MOVB	AH, fdk_daddr+0[EBP]	;Yes - get right value
26$:	CALL	flopcmda
	JC	30$
	MOVB	AH, ucb_fdxgpl[ESI]	;GPL value
	CALL	flopcmda
	JC	30$
	MOVB	AH, #0xFF		;DTL value
28$:	CALL	flopcmda
	JC	30$
	MOVL	EBX, ucb_kcb[ESI]
	MOVB	kcb_itimer[EBX], #3t	;Start interrupt timer
	MOVL	EAX, #-1
	MOVL	EDX, EAX
	CALL	knlXfWait##
	JNC	xferdone
	JMP	xferder

;Here if doing format operation

dofmt:	MOVB	AH, ucb_fdsecs[ESI]	;Sector size
	CALL	flopcmda
30$:	JC	fdkdone
	MOVB	AH, 0			;GPL value for format
	CALL	flopcmda
	JC	30$
	MOVB	AH, #0xF6		;Data fill value
	JMP	28$			;Continue
.PAGE
;Here when transfer is complete

xferdone:
	CALL	knlDmaDisable##		;Disable our DMA channel
	ANDB	kcb_sts1[EBX], #~K1$DMAINUSE
	CALL	floprslt2		;Get remaining result bytes
xferder:JC	fdkdone
	CMPB	BL, #6			;Did we get 6 bytes?
	JNE	xfdverr			;No - fail
	MOVB	BL, ucb_fdrslt+0[ESI]	;Check ST0 result value
	CMPB	BL, ucb_select[ESI]
	JE	xfgood			;If no error
	CMPW	ucb_fdrslt+1[ESI], #0080h ;Is the error end of cylinder?
	JE	xfgood			;Yes - this is OK
	MOVW	AX, ucb_fdrslt+1[ESI]	;No - get error status bits
	CALL	xlaterror		;Translate the error indication
	CMPL	EAX, #ER_WPRER		;Write protect error?
	JE	xferr			;Yes - don't bother retrying that
	MOVL	EBX, ucb_kcb[ESI]	;No - is this the read-ahead DCB?
;;;;?????
	DECB	fdk_retry1[EBP]		;No - have we done this enough?
	JNS	doxfer4			;No - go try again
	ORB	ucb_sts1[ESI], #U1$RECAL ;Yes - recalibrate next time
	DECB	fdk_retry3[EBP]		;Should we try a restore?
	JS	xferr			;No - its time to give up!
	JMP	doxfer2			;Go try again

;Here if fatal error
;	c{EAX} = Error code
;	c{EDX} = Offset of error counter pair

xferr:	TESTL	EDX, EDX		;Do we have an error counter?
	JE	fdkdone			;No
	INCL	4[EDX]			;Yes - bump the hard error counter
	JMP	fdkdone

;Here with good transfer complete

xfgood:	CALL	knlDmaGetCnt##		;Get the transfer count
	MOVL	EBX, ucb_kcb[ESI]
	SUBL	EAX, fdk_count[EBP]	;Calculate amount actually transfered
	NEGL	EAX
	ADDL	fdk_amount[EBP], EAX	;Add in to total amount transfered
	TESTB	ucb_bits[ESI], #UB$MEDIAC ;Does drive have a media sensor?
	JE	4$			;No
	TESTB	kcb_sts2[EBX], #K2$MSENSOR ;Yes - are we using it now?
	JNE	4$			;Yes
	CMPW	fdk_daddr+2[EBP], #0	;No - on track 0 now?
	JE	4$			;Yes
	MOVL	EDX, ucb_ioreg1[ESI]	;No - get current media change bit
	A2IOP	P_DCFDDIR		;  state
	INB	[DX]
	IOPAUSE
	ANDB	AL, #0x80
	MOVB	kcb_fdmssen[EBX], AL
	ORB	kcb_sts2[EBX], #K2$MSENSOR
4$:	TESTB	fdk_mode[EBP], #FM$LIST ;Do we have a buffer list?
	JE	6$			;No - all done
	MOVL	EAX, fdk_buffer[EBP]	;Yes
	ORB	bfr_status[EAX], #BS$FULL ;Indicate this buffer is full
	MOVL	EAX, bfr_nextxfr[EAX]	;Get next buffer
	TESTL	EAX, EAX
	JE	fdkdone			;Done if no more
	MOVL	fdk_buffer[EBP], EAX	;More - advance buffers
	INCL	fdk_block[EBP]		;Bump disk block number
	MOVL	EDX, fdk_block[EBP]
	CALL	fdkbk2phy2		;Convert to physical disk address
	MOVL	fdk_daddr[EBP], EDX
	JMP	doxfer0			;Go transfer next buffer

;Here when finished with a good transfer

6$:	CLRL	EAX			;Indicate no error
fdkdone:MOVL	EBX, ucb_kcb[ESI]
	TESTB	kcb_sts1[EBX], #K1$DMAALLOC ;Do we have the DMA channel?
	JE	10$			;No
	PUSHL	EAX			;Yes
	TESTB	kcb_sts1[EBX], #K1$DMAINUSE ;Is it in use?
	JE	8$			;No
	CALL	knlDmaDisable##		;Yes - disable it
8$:	MOVL	ECX, #fdkclnup
	PUSHL	EDI
	MOVL	EDI, EBX
	CALL	knlDmaGiveChn##		;Give up DMA channel
	ANDB	kcb_sts1[EBX], #~{K1$DMAALLOC|K1$DMAINUSE}
	POPL	EDI
	POPL	EAX
10$:	TESTB	ucb_sts1[ESI], #U1$MOTON ;Is our motor running now?
	JE	12$			;No
	MOVB	CL, ucb_fdmot[ESI]	;Yes - start motor off timer
	MOVB	ucb_fdmoc[ESI], CL
12$:	TESTL	EAX, EAX
	JNS	16$			;If no error
	ORB	ucb_sts1[ESI], #U1$RECAL ;Error - recalibrate next time
	MOVL	ECX, fdk_amount[EBP]
	STC				;Indicate error
16$:	LEAVE
	RET

;Here to report hard device error

xfdverr:INCL	ucb_tdeverr[ESI]	;Count the error
	INCL	ucb_hdeverr[ESI]
	MOVL	EAX, #ER_DEVER		;Get error code
	JMP	fdkdone
.PAGE
;Subroutine to translate error indication from the drive and to increment the
;  total error counter
;	c[AX] = Error bits from the drive
;	CALL	xlaterror
;	c{EAX} = knl error code
;	c{EDX} = Offset of error counter pair (total error count followed by
;		   hard error count)

xlaterror:
	MOVL	EDX, #errtable		;Point to error table
	MOVL	ECX, #6
4$:	TESTW	[EDX], AX		;Check for this error
	JNE	6$			;Found it
	ADDL	EDX, #6t
	LOOP	ECX, 4$
6$:	MOVXWL	EAX, 2t[EDX]		;Get error code
	MOVZWL	EDX, 4t[EDX]		;Get relative offset of error counter
	TESTL	EDX, EDX		;Do we have one?
	JE	8$			;No
	ADDL	EDX, ESI		;Yes - get its actual offset
	INCL	[EDX]			;Increment the soft error counter
8$:	RET
.PAGE
	.SBTTL	kf_chkwp - Check write protect status

;Here for the check write protect status function at fork level
;	c{EDI} = Offset of DCB
;	CALL	fdkchkwp

fdkchkwpf:
	ENTER	fdk_SIZE, 0
	MOVB	fdk_mode[EBP], #0
	MOVL	EBX, ucb_kcb[ESI]
	MOVB	AL, kcb_fdmoto[EBX]	;Get current motor on bits
	ORB	AL, ucb_fdmoto[ESI]	;Plus our motor on bit
	ORB	AL, ucb_select[ESI]	;Include our select value
	MOVL	EDX, ucb_ioreg1[ESI]	;Give it to the controller
	A2IOP	P_DCFDDOR
	OUTB	[DX]
	IOPAUSE
	ANDB	AL, #3
	MOVB	kcb_fdselect[EBX], AL
	MOVB	AH, #04h		;Do a sense drive status command
	CALL	flopcmdi
	JC	10$
	MOVB	AH, ucb_select[ESI]	;Head and unit select
	CALL	flopcmda
	JC	10$
	CALL	floprslt
	JC	10$
	DECL	EBX
	JNE	8$
	MOVL	EBX, ucb_kcb[ESI]
	MOVB	AL, kcb_fdmoto[EBX]	;Restore correct motor states
	ORB	AL, ucb_select[ESI]	;Include our select value
	MOVL	EDX, ucb_ioreg1[ESI]
	A2IOP	P_DCFDDOR
	OUTB	[DX]
	IOPAUSE
	ANDB	ucb_sts1[ESI], #{~U1$WPROT}&0FFh ;Assume not write protected
	TESTB	ucb_fdrslt[ESI], #40h	;Is the drive write protected?
	JE	6$			;No
	ORB	ucb_sts1[ESI], #U1$WPROT ;Yes - remember that
6$:	CLRL	EAX
	JMP	fdkdone

;Here if error while have drive selected

8$:	INCL	ucb_tdeverr[ESI]	;Count the error
	INCL	ucb_hdeverr[ESI]
	MOVL	EAX, #ER_DEVER
10$:	PUSHL	EAX			;Save error code
	MOVL	EBX, ucb_kcb[ESI]
	MOVB	AL, kcb_fdmoto[EBX]	;Restore correct motor states
	ORB	AL, ucb_select[ESI]	;Include our select value
	MOVL	EDX, ucb_ioreg1[ESI]
	A2IOP	P_DCFDDOR
	OUTB	[DX]
	IOPAUSE
	POPL	EAX			;Restore error code
	JMP	fdkdone
.PAGE
	.SBTTL	kf_chkchg - Check for possible disk change at fork level

;Here for the check for possible disk change function at fork level
;	c{EDI} = Offset of DCB
;	CALL	fdkchkchf

fdkchkchgf:
	ENTER	fdk_SIZE, 0
	MOVB	fdk_mode[EBP], #0
	MOVL	EBX, ucb_kcb[ESI]
	CALL	chgbit			;Is the disk changed bit set?
	JNC	8$			;No - nothing to do here!
	CALL	getcont			;Yes - disk may have been changed
	MOVB	fdk_retry3[EBP], #8t	;Initialize retry count
2$:	MOVL	fdk_daddr[EBP], #1	;Assume should seek to track 0
	CMPB	ucb_fdctrk[ESI], #0	;On track 0 now?
	JNE	4$			;No
	INCB	fdk_daddr+2[EBP]	;Yes - seek to track 1
4$:	CALL	doseek			;Do seek to try and clear disk change
					;  indication
	JC	8$			;If error
	CALL	chgbit			;Did disk change indication go away?
	JNC	6$			;Yes
	DECB	fdk_retry3[EBP]		;No - have we done this enough?
	JNE	2$			;No - go try again
	JMP	8$			;Yes - go report the error

;Here if the disk changed indication was cleared - indicate disk changed

6$:	MOVL	EAX, #ER_MDCHG
8$:	JMP	fdkdone
.PAGE
	.SBTTL	chgbit - Subroutine to check disk change bit

;Subroutine to check disk change bit
;	CALL	chgbit
;	C:set = Error (bit set, reported as not ready)
;	  c{EAX} = Error code
;	C:clr = Normal (bit clear)
;	  c{EAX}  = 0

chgbit:	MOVB	AL, kcb_fdmoto[EBX]	;Get current motor on bits
	ORB	AL, ucb_fdmoto[ESI]	;Plus our motor on bit
	ORB	AL, ucb_select[ESI]	;Include our select value
	MOVL	EDX, ucb_ioreg1[ESI]	;Give it to the controller
	A2IOP	P_DCFDDOR
	OUTB	[DX]
	IOPAUSE
	ANDB	AL, #3
	MOVB	kcb_fdselect[EBX], AL
	A2IOP	P_DCFDDIR-P_DCFDDOR
	INB	[DX]			;Get the disk change bit
	IOPAUSE
	MOVB	AH, AL
	MOVB	AL, kcb_fdmoto[EBX]	;Restore correct motor states
	ORB	AL, ucb_select[ESI]	;Include our select value
	A2IOP	P_DCFDDOR-P_DCFDDIR
	OUTB	[DX]
	IOPAUSE
	XORB	AH, kcb_fdmssen[EBX]
	JS	6$			;If set
	CLRL	EAX			;Not set
	RET

6$:	MOVL	EAX, #ER_NTRDY		;No - say may have been changed
	STC
	RET
.PAGE
	.SBTTL	doseek - Device fork level subroutine to do seek

;Device fork level subroutine to do seek
;	CALL	doseek
;	C:set = Error
;	  c{EAX} = Error code (do not have DMA channel)
;	C:clr = Normal (DMA channel allocated)

doseek:	MOVB	ucb_fdmoc[ESI], #0	;Stop motor off timer
	MOVW	AX, ucb_fdspcfy[ESI]	;Do we need to do a specify command?
	CMPW	kcb_fdspcfy[EBX], AX
	JE	4$			;No
	MOVW	kcb_fdspcfy[EBX], AX	;Yes - remember new value
	MOVB	AH, #3			;Yes - issue specify command
	CALL	flopcmdi
	JC	2$
	MOVB	AH, kcb_fdspcfy+0[EBX]	;Step rate time and head unload time
	CALL	flopcmda
	JC	2$
	MOVB	AH, kcb_fdspcfy+1[EBX]	;Head load time and DMA mode
	CALL	flopcmda
	JNC	4$			;Go on if OK
2$:	MOVW	kcb_fdspcfy[EBX], #0	;Error - force specify command next time
	JMP	done4

4$:	MOVB	AL, ucb_fdtrkd[ESI]	;Get our track density
	CMPB	kcb_fdtrkd[EBX], AL	;Do we need to change it?
	JE	10$			;No
	MOVB	kcb_fdtrkd[EBX], AL	;Yes - remember new value
	MOVL	EDX, ucb_ioreg1[ESI]
	CMPB	kcb_fdtype[EBX], #FCT_CMPT ;Is this a ComptiCard?
	JNE	6$			;No
	A2IOP	P_DCFDCR2		;Yes
	MOVB	AL, cmptcr2[EAX]	;Get right value
	JMP	8$			;Continue

;Here if have normal AT floppy controller

6$:	A2IOP	P_DCFDCTL		;Give it to the controller
8$:	OUTB	[DX]
	IOPAUSE
10$:	MOVB	AL, ucb_fdmoto[ESI]	;Get our motor on bit
	ORB	kcb_fdmoto[EBX], AL	;Set in in the KCB
	MOVB	AL, kcb_fdmoto[EBX]	;Get all motor on bits
	ORB	AL, ucb_select[ESI]	;Put in our select value
	MOVL	EDX, ucb_ioreg1[ESI]	;Give it to the controller (this
	A2IOP	P_DCFDDOR		;  selects drive and turns its motor
	OUTB	[DX]			;  on if it was off)
	IOPAUSE
	ANDB	AL, #3
	MOVB	kcb_fdselect[EBX], AL	;Save just the select bits
	TESTB	ucb_sts1[ESI], #U1$MOTON ;Is the motor on now?
	JNE	motoro4			;Yes
	MOVL	EAX, ucb_fdmst[ESI]
	CLRL	EDX
	CALL	knlXfTimeWait##
	JNC	12$
	MOVB	ucb_fdmoc[ESI], #1	;Make sure we turn the motor off soon
	JMP	done4

12$:	ORB	ucb_sts1[ESI], #U1$MOTON ;Indicate motor is on now
motoro4:MOVB	AL, ucb_fdmot[ESI]
	MOVB	ucb_fdmoc[ESI], AL
	MOVL	EBX, ucb_kcb[ESI]
	TESTB	ucb_sts1[ESI], #U1$RECAL ;Need to recalibrate now?
	JE	rstrdn2			;No
	ANDB	ucb_sts1[ESI], #~U1$RECAL ;Yes
	MOVB	fdk_retry2[EBP], #3	;Set retry count for seek
again2:	MOVB	fdk_retry1[EBP], #3	;Set retry count for restore
again4:	MOVB	ucb_fdctrk[ESI], #0	;Going to track 0
	ORB	kcb_sts1[EBX], #K1$INT	;Indicate expecting interrupt now
	MOVB	AH, #0x07			;Start a restore operation
	CALL	flopcmdi
	JC	done2			;If error
	MOVB	AH, ucb_select[ESI]	;Unit select
	ANDB	AH, #3
	CALL	flopcmda
	JC	done2			;If error
	MOVL	EBX, ucb_kcb[ESI]	;OK
	MOVB	kcb_itimer[EBX], #3t	;Start interrupt timer
	MOVL	EAX, #-1
	MOVL	EDX, EAX
	CALL	knlXfWait##
	JNC	rstrdone
	JMP	done2
.PAGE
;Here if error on seek (from below)

2$:	INCL	ucb_tseekerr[ESI]	;Count the seek error
	DECB	fdk_retry1[EBP]		;Should we try the restore again?
	JG	again4			;Yes
	INCL	ucb_hseekerr[ESI]	;No - count it as a hard error
done2:	JMP	done8			;Fail!

;Here at device fork level after restore is complete

rstrdone:
	CALL	chkseek			;No - check for seek error
	MOVL	EBX, ucb_kcb[ESI]	;Restore KCB offset
	JC	2$			;If error
rstrdn2:ORB	kcb_sts1[EBX], #K1$INT	;Indicate expecting interrupt now
	CMPB	fdk_daddr+1[EBP], #0	;Which side?
	JNE	6$			;Side 1
	ANDB	ucb_select[ESI], #~4	;Side 0 - clear head select bit
	JMP	8$

6$:	ORB	ucb_select[ESI], #4	;Set head select bit
8$:	MOVB	AL, fdk_daddr+2[EBP]	;Are we on the right track now?
	CMPB	ucb_fdctrk[ESI], AL
	JE	done4			;Yes - finished now
	MOVB	AH, #0x0F		;No - start a seek operation
	CALL	flopcmdi
	JC	done8
	MOVB	AH, ucb_select[ESI]	;Head and unit select
	CALL	flopcmda
	JC	done8
	MOVB	AH, fdk_daddr+2[EBP]	;Get requested track
	TESTB	ucb_sts1[ESI], #U1$HFTRK ;Is this a 48 tpi disk in a 96 tpi
					 ;  drive?
	JE	10$			;No
	ADDB	AH, AH			;Yes - adjust the track number
10$:	CALL	flopcmda		;Give final command byte to the
	JC	done8			;  controller
	MOVL	EBX, ucb_kcb[ESI]
	MOVB	kcb_itimer[EBX], #3t	;Start interrupt timer
	MOVL	EAX, #-1		;Wait for the seek to finish
	MOVL	EDX, EAX
	CALL	knlXfWait##
	JC	done4			;If error
	CALL	chkseek			;Check for seek error
	MOVL	EBX, ucb_kcb[ESI]	;Restore KCB offset
	JC	14$			;If error
	MOVB	AL, fdk_daddr+2[EBP]	;OK - store new current track
	MOVB	ucb_fdctrk[ESI], AL
done4:	MOVL	EBX, ucb_kcb[ESI]
	RET

;Here if error on the seek

14$:	INCL	ucb_tseekerr[ESI]	;Count the seek error
	DECB	fdk_retry2[EBP]		;Should we try again?
	JG	again2			;Yes - go restore and then seek
	INCL	ucb_hseekerr[ESI]	;No - count as hard seek error
done8:	STC
	JMP	done4
.PAGE
	.SBTTL	flopcmdi - Subroutine to send initial command byte to floppy controller

;Subroutine to send initial command byte to the floppy controller
;	c(AH) = Command byte value
;	CALL	flopcmdi
;	C:clr = Normal
;	C:set = Error
;	  c{EAX} = Error code
;  EBX is respected

flopcmdi:
	MOVL	EDX, ucb_ioreg1[ESI]	;Get IO port
	A2IOP	P_DCFDSTS
	INB	[DX]			;Get controller status
	IOPAUSE
	ANDB	AL, #0xC0		;Just high 2 bits
	CMPB	AL, #0x80		;Is it ready for data?
	JE	8$			;Yes
	PUSHL	EAX			;No - wait for a short time
	MOVL	EAX, #50t*ST_MILLISEC
	CLRL	EDX
	CALL	knlXfTimeWait##
	POPL	EAX
	INB	[DX]			;Is it ready now?
	IOPAUSE
	ANDB	AL, #0xC0
	CMPB	AL, #0x80
	JE	8$			;Yes
	PUSHL	EBX			;No
	CALL	floprslt		;Assume need to get some result bytes!
	POPL	EBX
	JC	6$			;If error
					;OK - fall into flopcmda to try again

	.SBTTL	flopcmda - Subroutine to send additional command byte to floppy controller

;Subroutine to send additional command byte to the floppy controller
;	c(AH) = Command byte value
;	CALL	flopcmda
;	C:clr = Normal
;	C:set = Error
;	  c{EAX} = Error code

flopcmda:
	MOVL	EDX, ucb_ioreg1[ESI]	;Get IO port
	A2IOP	P_DCFDSTS
	MOVL	ECX, #0x30000		;Initialize retry counter
4$:	INB	[DX]			;Get controller status
	IOPAUSE
	ANDB	AL, #0xC0		;Just high 2 bits
	CMPB	AL, #0x80		;Is it ready for data?
	JE	8$			;Yes
	LOOP	ECX, 4$			;No - wait some more!
	INCL	ucb_tdeverr[ESI]	;Count the error
	INCL	ucb_hdeverr[ESI]
	MOVL	EAX, #ER_DEVER		;Indicate device error
	STC
6$:	RET

;Here when controller is ready for data

8$:	MOVB	AL, AH			;Get value
	INCL	EDX			;Point to data port
	OUTB	[DX]			;Output the byte
	IOPAUSE
	RET				;Finished (C is clear)
.PAGE
	.SBTTL	chkseek - Subroutine to check for error after seek

;Subroutine to check for error after seek is complete
;	c{EBX} = Offset of KCB
;	c{ESI} = Offset of UCB
;	CALL	chkseek
;	C:set = Error
;	  c{EAX} = Error code
;	C:clr = Normal

chkseek:CALL	floprslt		;Get result bytes
	JC	2$
	DECL	EBX
	JS	2$
	MOVB	AL, ucb_fdrslt+0[ESI]	;Check ST0 value
	ANDB	AL, #0xF8
	CMPB	AL, #0x20
	JE	4$			;OK
2$:	MOVL	EAX, #ER_SEKER		;Indicate seek error
	STC
4$:	RET
.PAGE
	.SBTTL	floprslt - Subroutine to get result bytes from floppy controller

;Subroutine to get result bytes from the floppy controller
;	CALL	floprslt
;	C:set = Error
;	  c{EAX} = Error code
;	  c{EBX} = Number of result bytes obtained
;	C:clr = Normal

floprslt:
	MOVL	EDX, ucb_ioreg1[ESI]
	PUSHL	ESI			;Save UCB offset
	ADDL	ESI, #ucb_fdrslt	;Point to buffer for the result bytes
	JMP	2$
					;Enter here if already have first
floprslt2:				;  result byte
	MOVL	EDX, ucb_ioreg1[ESI]
	PUSHL	ESI			;Save UCB offset
	ADDL	ESI, #ucb_fdrslt+1	;Point to buffer for the result bytes
2$:
	MOVL	ECX, #10
	CALL	knlSDelay##

	CLRL	EBX
	A2IOP	P_DCFDSTS
4$:	MOVL	ECX, #0x30000		;Get loop count
6$:	INB	[DX]			;Get controller status
	IOPAUSE
	ANDB	AL, #0xC0		;Only high 2 bits
	CMPB	AL, #0xC0		;Is a result byte ready?
	JE	8$.S			;Yes
	LOOP	ECX, 6$			;No - wait some more
	JMP	12$			;Go report device error

;Here with result byte ready

8$:	INCL	EDX			;Point to the data port
	INCL	EBX
	INB	[DX]			;Get the result byte
	IOPAUSE
	MOVB	[ESI], AL		;Store the byte
	INCL	ESI			;Bump pointer
	MOVL	ECX, #3t
	CALL	knlSDelay##		;Wait for at least 12us
	DECL	EDX			;Point to the status port
	INB	[DX]			;Get status
	IOPAUSE
	TESTB	AL, #0x10		;More result bytes available?
	JE	14$			;No - all finished here
	CMPB	BL, #8			;Yes - is this too many?
	JB	4$			;No - go get another
12$:	POPL	ESI			;Yes
	INCL	ucb_tdeverr[ESI]	;Report the hard device error
	INCL	ucb_hdeverr[ESI]
	MOVL	EAX, #ER_DEVER
	STC
	RET

;Here if OK (C is clear)

14$:	POPL	ESI
	RET
.PAGE
	.SBTTL	getcont - Subroutine to fully allocate floppy controller

;Subroutine to fully allocate floppy controller
;	CALL	getcont

getcont:MOVB	dcb_dmachnl[EDI], #2	;Make sure have DMA channel number
	PUSHL	EDI
	MOVL	EDI, EBX
	CALL	knlXfDmaGetChn##	;Get the DMA channel
	POPL	EDI
	JC	4$			;If error
	ORB	kcb_sts1[EBX], #K1$DMAALLOC ;Indicate DMA channel allocated
	MOVL	curkcb, EBX		;This is now the current KCB
	TESTB	knlMachType##+3, #02h	;Is this a PS/2?
	JNE	4$			;Yes
	ORB	kcb_fdmoto[EBX], #08h	;No - enable interrupts and DMA
	MOVB	AL, kcb_fdmoto[EBX]
	MOVL	EDX, ucb_ioreg1[ESI]
	A2IOP	P_DCFDDOR
	OUTB	[DX]
	IOPAUSE
	INB	P_INC1P1		;Enable our interrupt
	IOPAUSE
	ANDB	AL, #~40h
	OUTB	P_INC1P1
	IOPAUSE
	CLC
4$:	RET
.PAGE
	.SBTTL	fdkclnup - Subroutine to do clean-up after using DMA channel

;Subroutine to do clean-up after using DMA channel - this subroutine is
;  called after we have given up the DMA channel but before it is given to
;  anyone else - the only valid register is EDI, which points to our DCB -
;  all registers except EAX must be preserved
;	c{EDI} = Offset of KCB
;	CALL	fdkclnup

fdkclnup:
	PUSHL	EDX
	INB	P_INC1P1		;Disable our interrupt
	IOPAUSE
	ORB	AL, #40h
	OUTB	P_INC1P1
	IOPAUSE
	ANDB	kcb_fdmoto[EDI], #~08	;Disable interrupts and DMA at
	MOVB	AL, kcb_fdmoto[EDI]	;  interface
	MOVL	EDX, kcb_ioreg1[EDI]
	A2IOP	P_DCFDDOR
	OUTB	[DX]
	IOPAUSE
	POPL	EDX
	RET				;Thats all
.PAGE
	.SBTTL	fdkbk2phy - Subroutine to convert block number to physical disk address

;Subroutine to convert block number to physical disk address.  A file structured
;  double density floppy disk has the following format:
;    Tracks:        40 (0-39) or 80 (0-79)
;    Heads/Track:   2
;    Sectors/Track: 9
;    Byte/sector:   512
;  A file structured high density floppy disk has the following format:
;    Tracks:        80 (0-79)
;    Heads/Track:   2
;    Sectors/Track: 15
;    Byte/sector:   512
;	c<dcb_dkdskblk{EDI}> = Block number on disk
;	c{EDI}             = Offset of DCB
;	CALL	fdkbk2phy
;	c{EDX} = Sector number (8) Head number (8) Track number (16)
;  All registers except EDX are preserved

fdkbk2phy:
	MOVL	EDX, dcb_dkdskblk+0[EDI] ;Get block number on disk
fdkbk2phy2:
	PUSHL	EAX
	PUSHL	ECX
	MOVL	EAX, EDX
	MOVL	ECX, ucb_csects[ESI]	;Get sectors per track
	TESTL	ECX, ECX		;Make sure not 0!
	JNE	2$
	INCL	ECX
2$:	CLRL	EDX
	DIVL	ECX			;Get sector number
	INCB	DL
	PUSHL	EDX			;Save sector number
	MOVB	DL, #0
	CMPB	ucb_cheads[ESI], #1	;Double sided disk?
	JE	4$			;No
	SHRL	EAX, #1			;Yes - get head and track numbers
	RCLB	DL, #1
4$:	MOVB	1[ESP], DL		;Store head number
	MOVW	2[ESP], AX		;Store track number
	POPL	EDX			;Get in right register
	POPL	ECX
	POPL	EAX
	RET
.PAGE
	.SBTTL	fdkoas - Floppy disk once-a-second routine

;Here once-a-second.  If we detect a hung controller, we reset the controller
;  and restart the timer.  It should interrupt immediately, which we will
;  detect as a hung controller interrupt because the K1$RESET bit will be set.
;  If it times out again, we fake the interrupt directly from here and hope
;  for the best.  In this case, the controller is probably dead!

fdkoas:	MOVL	EBX, fdkakcb		;Get our first KCB
2$:	TOFORK
	CMPB	kcb_itimer[EBX], #0	;Are we timing an interrupt now?
	JE	6$			;No
	DECB	kcb_itimer[EBX]		;Yes - reduce count
	JNE	6$			;If not out yet
	MOVL	EDI, kcb_curdcb[EBX]	;Timed-out - get DCB
	TESTL	EDI, EDI
	JE	6$
	MOVL	ESI, dcb_dkucb[EDI]	;And get UCB
	CALL	knlDmaDisable##		;Disable our DMA channel
	CALL	knlDmaGetCnt##		;Get the transfer count
	MOVL	EDX, ucb_ioreg1[ESI]
	A2IOP	P_DCFDSTS
	INB	[DX]
	IOPAUSE
	TESTB	kcb_sts1[EBX], #K1$RESET ;Already doing reset?
	JE	4$			;No - go on
	PUSHL	EBX			;Yes
	CALL	fdkfrk2			;Do timeout stuff now
	POPL	EBX
	JMP	6$			;Continue

;Here if not already resetting timed out controller

4$:	ORB	kcb_sts1[EBX], #K1$RESET ;Indicate doing reset
	ANDB	kcb_sts1[EBX], #~K1$RESULT
	MOVL	EDX, ucb_ioreg1[ESI]	;Reset the floppy controller
	A2IOP	P_DCFDDOR
	MOVB	AL, #8
	OUTB	[DX]
	IOPAUSE
	MOVB	ucb_fdmoc[ESI], #0	;Clear motor off timer
	ANDB	ucb_sts1[ESI], #~U1$MOTON
	MOVB	AL, ucb_fdmoto[ESI]	;Clear our motor on bit
	NOTB	AL
	ANDB	kcb_fdmoto[EBX], AL
	MOVB	AL, kcb_fdmoto[EBX]
	ORB	AL, ucb_select[ESI]	;Remove the reset state (this should
	ORB	AL, #0x0C		;  cause an interrupt)
	OUTB	[DX]
	IOPAUSE
	MOVB	kcb_itimer[EBX], #2t	;Restart the timer
6$:	FROMFORK
	MOVL	ESI, kcb_fucb[EBX]	;Get first UCB
	TESTL	ESI, ESI
	JE	16$			;If none
10$:	TOFORK
	CMPB	ucb_fdmoc[ESI], #0	;Are we timing the motor?
	JE	12$			;No
	DECB	ucb_fdmoc[ESI]		;Yes - count it down
	JNE	12$			;Time to turn it off?
	MOVB	AL, ucb_fdmoto[ESI]	;Yes - get the motor bit
	NOTB	AL
	ANDB	kcb_fdmoto[EBX], AL	;Clear the bit in the KCB
	MOVB	AL, kcb_fdmoto[EBX]	;And turn off the motor
	ORB	AL, kcb_fdselect[EBX]	;Preserve current select value
	MOVL	EDX, ucb_ioreg1[ESI]
	A2IOP	P_DCFDDOR
	OUTB	[DX]
	IOPAUSE
	ANDB	ucb_sts1[ESI], #~U1$MOTON
12$:	FROMFORK
	MOVL	ESI, ucb_next[ESI]	;Advance to next UCB
	TESTL	ESI, ESI
	JNE	10$			;Continue if another
16$:	MOVL	EBX, kcb_nexts[EBX]	;Advance to next KCB
	TESTL	EBX, EBX
	JNE	2$			;Continue if another
	RET
.PAGE
	.SBTTL	fdkint - Floppy disk interrupt routine

fdkint:	PUSHAL				;Save all registers
	PUSHL	DS
	PUSHL	ES
	PUSHL	FS
	PUSHL	GS
	PUSHL	#GS_XDATA
	POPL	DS
	MOVL	EDI, curkcb		;Get our current KCB
	MOVL	EDX, kcb_ioreg1[EDI]	;Point to data register
	A2IOP	P_DCFDDATA
	TESTB	kcb_sts1[EDI], #K1$INT	;Expecting interrupt now?
	JE	18$			;No
	TESTB	kcb_sts1[EDI], #K1$RESULT ;Yes - in result phase now?
	JNE	2$			;Yes
	MOVB	AL, #0x08		;No - do sense interrupt command
	OUTB	[DX]
	IOPAUSE
	JMP	8$

;Here if in result phase now

2$:	MOVL	ECX, #0x1000
	DECL	EDX
4$:	INB	[DX]
	ANDB	AL, #0xC0
	CMPB	AL, #0xC0
	LOOPNE	ECX, 4$
	INCL	EDX
	INB	[DX]			;Get first result byte
	IOPAUSE
	MOVL	EDX, kcb_curdcb[EDI]	;Get current DCB
	MOVL	ESI, dcb_dkucb[EDX]
	MOVB	ucb_fdrslt+0[ESI], AL	;Store first result byte
8$:	CALL	knlReqFork##		;Yes - request fork
	TESTB	knlMachType##+3, #0x02	;Is this a PS/2?
	JE	14$			;No - don't wait for interrupt to go
	MOVL	EDX, kcb_ioreg1[EDI]	;  away
	MOVL	ECX, #0x1000		;Yes - must wait for interrupt request
12$:	INB	[DX]			;  to go away before dismissing the
	IOPAUSE
	TESTB	AL, #0x80		;  interrupt!
	LOOPNE	ECX, 12$
	JNE	20$
14$:	JMP	knlIntLowDone##		;Dismiss interrupt

;Here if not expecting interrupt.  If not running on a PS/2, we just dismiss it
;  and hope everything will continue to work (this is likely to happen when we
;  first enable a controller).  If running on a PS/2, we crash, since we can't
;  ignore a level triggered interrupt!

18$:	TESTB	knlMachType##+3, #0x02	;Is this a PS/2?
	JE	14$			;No - just dismiss the interrupt
	CRASH	SPRI			;[SPuRious Interrupt]

;Here if can't clear the interrupt request on a PS/2.  There is nothing we can
;  do in this case, since we can't dismiss a PS/2 interrupt while the request
;  is still active!

20$:	CRASH	HNGI			;[HuNG Interrupt request]
.PAGE
;Device fork level routine for floppys

fdkfork:MOVL	EBX, EDI
fdkfrk2:MOVL	EDI, kcb_curdcb[EBX]
	MOVL	ESI, dcb_dkucb[EDI]	;Get UCB offset
	TESTL	ESI, ESI
	JE	8$
	MOVB	kcb_itimer[EBX], #0	;Clear interrupt timer
	TESTB	kcb_sts1[EBX], #K1$RESET ;Doing reset now?
	JNE	4$			;Yes - this is a timeout
	ANDB	kcb_sts1[EBX], #{~{K1$INT|K1$RESULT}}&0FFh ;No
	CLRL	EAX			;Everything is normal
2$:	JMP	knlResumeOutput##

;Here if doing reset - this means we had a time-out

4$:	ANDB	kcb_sts1[EBX], #{~{K1$RESET|K1$INT|K1$RESULT}}&0FFh
	CALL	floprslt		;Get result bytes
	MOVL	EBX, ucb_kcb[ESI]
	ORB	ucb_sts1[ESI], #U1$RECAL ;Recalculate next time
	MOVL	EAX, #ER_NTRDY		;Assume should report as not ready
	TESTB	ucb_bits[ESI], #UB$MEDIAC ;Does it have a media sensor?
	JE	2$			;No
	TESTB	kcb_sts2[EBX], #K2$MSENSOR ;Yes - are we using it now?
	JE	2$			;No
	INCL	ucb_hungerr[ESI]	;Yes
8$:	MOVL	EAX, #ER_NORSP		;Report this as a timeout
	JMP	2$
.PAGE
	.SBTTL	Data

;Table which gives correspondense between result byte values and error codes

	.MOD	2
errtable:
	.WORD	0020h, ER_DATER, ucb_tdataerr
	.WORD	0101h, ER_IDFER, ucb_tidferr
	.WORD	0004h, ER_RNFER, ucb_trnferr
	.WORD	1200h, ER_SEKER, ucb_tseekerr
	.WORD	0002h, ER_WPRER, 0
	.WORD	0010h, ER_LSTER, ucb_tovrnerr
