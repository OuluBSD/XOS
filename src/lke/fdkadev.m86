;Here if media was not changed

10$:	ANDB	dcb_sts2[EDI], #~D2$CHKCHG
12$:	CALL	getcont			;Get use of the controller
doxfer0:MOVB	fdk_retry3[EBP], #2	;Initialize restore retry count
doxfer2:MOVL	EBX, ucb_kcb[ESI]
