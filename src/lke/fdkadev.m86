	.SBTTL	ks_media - Subroutine to determine media type

;Subroutine to determine media type - must be called in extended fork context
;	c{EDI} = Address of DCB
;	CALL	fdkmedia
;	C:set = Error
;	  c{EAX} = Error code
;	C:clr = Normal
;	  Z:set = Disk may be file structured
;	  Z:clr = Disk cannot be file structured

fdkmedia:
	PUSHL	#kf_chkwp		;Check write protect status
	PUSHL	#0
	PUSHL	#0
	CALL	xosdskTransfer##
	TESTL	EAX, EAX
	JS	2$			;If error
	TESTB	ucb_unittype[ESI], #01h ;OK - is this a high density drive?
	JNE	8$			;No - just use the current density
	TESTB	ucb_sts1[ESI], #U1$MOUNT ;Is the disk mounted now?
	JNE	4$			;Yes - use current density first
	ANDB	ucb_bits[ESI], #~{UB$DENSITY|UB$48TPI}
	ORB	ucb_bits[ESI], #DD_HIGH ;No - force high density
	CALL	setmdfq
2$:	JC	14$
	CALL	setnumsec
	CALL	setgaplen
	CALL	setspcfy
4$:	MOVL	dcb_dkdskblk+0[EDI], #1	;Read an ID field on track 0
	MOVL	dcb_dkdskblk+4[EDI], #0
	PUSHL	#kf_readid
	PUSHL	#0
	PUSHL	#0
	CALL	xosdskTransfer##
	TESTL	EAX, EAX
	JNS	10$			;If this worked
	CMPL	EAX, #ER_NTRDY		;Error - is it "not ready"?
	JE	12$			;Yes - report it (NEED TO CHANGE DEN)
	CMPL	EAX, #ER_ABORT		;Or abort?
	JE	12$			;Yes - report this too
	XORB	ucb_bits[ESI], #UB$DENSITY ;No - try other density
	ANDB	ucb_bits[ESI], #~UB$48TPI
	TESTB	ucb_bits[ESI], #DD_HIGH ;High density now?
	JNE	6$			;Yes
	CMPB	ucb_unittype[ESI], #DT_HD5 ;No - is this a 5 1/4" drive?
	JNE	6$			;No
	ORB	ucb_bits[ESI], #UB$48TPI ;Yes - indicate 48 tracks
6$:	CALL	setmdfq
	JC	14$
	CALL	setnumsec
	CALL	setgaplen
	CALL	setspcfy
8$:	MOVL	dcb_dkdskblk+0[EDI], #1	;Read an ID field on track 0
	MOVL	dcb_dkdskblk+4[EDI], #0
	PUSHL	#kf_readid
	PUSHL	#0
	PUSHL	#0
	CALL	xosdskTransfer##
	TESTL	EAX, EAX
	JS	14$			;If error
10$:	PUSHL	#0
	MOVL	EAX, ESP
	PUSHL	#-XMBX_512
	PUSHL	EAX
	CALL	sysMemGetXmb##		;Get an XMB
	POPL	EBX
	TESTL	EAX, EAX
	JNS	16$			;If OK
12$:	STC
14$:	RET

;Here with a buffer

16$:	CLRL	EAX
	MOVL	dcb_dkdskblk+0[EDI], EAX	;Try to read block 0
	MOVL	dcb_dkdskblk+4[EDI], EAX
	MOVL	bfr_nextxfr[EBX], EAX
	PUSHL	#kf_readlist		;Read a block
	PUSHL	EBX
	PUSHL	#512t			;Get amount to read
	CALL	xosdskTransfer##
	PUSHL	EAX
	PUSHL	EBX
	CALL	sysMemGiveXmb##
	POPL	EAX
	TESTL	EAX, EAX
	JS	20$			;If error
	ORB	ucb_sts1[ESI], #U1$VALID ;Indicate disk contains valid data
	CLRL	EAX			;Set Z, clear C
	RET				;Thats all

;Here if error reading block from disk

20$:

;CODE HERE TO SET DISK TO BE PREFERRED TYPE (HD)

	STC
	RET
